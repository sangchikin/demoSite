---
import { type CollectionEntry } from 'astro:content';
import ArrowRight from '../assets/icons/arrow-right.svg';
import CustomImage from './CustomImage.astro';

type Props = { course: CollectionEntry<'courses'>; class?: string; headingLevel?: 'h2' | 'h3' };

const { course, class: className, headingLevel = 'h2' } = Astro.props;
const { title, description, difficulty, duration, category } = course.data;
const TitleTag = headingLevel;
const image = course.data.seo?.image;

// Color mapping for difficulty levels
const difficultyColors: Record<string, string> = {
    'Beginner': 'bg-green-100 text-green-800',
    'Intermediate': 'bg-yellow-100 text-yellow-800',
    'Advanced': 'bg-red-100 text-red-800'
};

const difficultyColor = difficultyColors[difficulty] || 'bg-gray-100 text-gray-800';
---

<a class:list={['group flex flex-col md:flex-row items-start gap-6 md:gap-8', className]} href={`/courses/${course.id}/`}>
    {image && (
        <div class="w-full md:w-48 md:flex-shrink-0">
            <CustomImage
                src={image.src}
                alt={image.alt || title}
                class="w-full h-40 md:h-32 object-cover rounded-sm"
            />
        </div>
    )}
    <div class="grow">
        <div class="flex items-center gap-2 mb-2">
            {difficulty && (
                <span class:list={['text-xs font-medium px-2 py-1 rounded', difficultyColor]}>
                    {difficulty}
                </span>
            )}
            {category && (
                <span class="text-xs font-medium px-2 py-1 rounded bg-blue-100 text-blue-800">
                    {category}
                </span>
            )}
        </div>
        <TitleTag
            class="font-serif text-xl leading-tight font-medium group-hover:underline group-hover:decoration-dashed group-hover:decoration-1 group-hover:underline-offset-4 sm:text-2xl"
        >
            {title}
        </TitleTag>
        {description && <div class="mt-2 text-sm leading-normal text-opacity-90">{description}</div>}
        {duration && (
            <div class="mt-3 text-xs text-opacity-75 flex items-center gap-1">
                <span>⏱️</span>
                <span>{duration}</span>
            </div>
        )}
    </div>
    <div class="hidden font-serif italic opacity-0 transition group-hover:opacity-100 md:inline-flex md:shrink-0 md:items-center md:gap-1">
        Enroll <ArrowRight class="h-4 w-4 fill-current" />
    </div>
</a>
